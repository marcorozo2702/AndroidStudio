<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.AutoActivity"
    tools:showIn="@layout/activity_auto">


    <LinearLayout
        android:id="@+id/cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Referencia"
            android:layout_width="89dp"
            android:layout_height="29dp"
            android:text="Referencia: " />

        <EditText
            android:id="@+id/edtReferencia"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=" " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Peca"
            android:layout_width="160dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:text="Nome: " />

        <EditText
            android:id="@+id/edtPeca"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=" " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dsc"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Descricao"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Descrição: " />
        <EditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=" " />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagemPeca"
            android:layout_width="327dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="selecionarImagem"
            app:srcCompat="@drawable/image_add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qtd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Quantidade"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Quantidade : " />

        <EditText
            android:id="@+id/edtQuantidade"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text=" "
            android:inputType="number"/>

        <TextView
            android:id="@+id/Unidade"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="Und. : " />

        <Spinner
            android:id="@+id/edtUnidade"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:entries="@array/unidade"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Valor"
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:text="Valor: "
                android:textColor="@android:color/background_dark"
                android:textStyle="bold"
                android:inputType="number"/>

            <EditText
                android:id="@+id/edtValor"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=" "
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="Salvar"
            android:onClick="salvarCadastroPeca"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnDeletar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:text="Deletar"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</LinearLayout>