<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#808080"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomePeca"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Nome XXX"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="212dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/infoRef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ref"
                    android:layout_width="42dp"
                    android:layout_height="20dp"
                    android:text="Ref:"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/referenciaPeca"
                    android:layout_width="158dp"
                    android:layout_height="match_parent"
                    android:text="00.000"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Quantidade"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Qtde. Estoque:"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/quantidadePeca"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unidadePeca"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:text="und"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoVl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/valor"
                    android:layout_width="54dp"
                    android:layout_height="20dp"
                    android:text="Valor:"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/valorPeca"
                    android:layout_width="146dp"
                    android:layout_height="match_parent"
                    android:text="000"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagemPeca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
